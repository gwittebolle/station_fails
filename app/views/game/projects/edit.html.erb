<div class="d-flex justify-content-center ">
  <div class="mt-3">
    <% if @level.index == 1 %>
      <span class="p-1 green-level"> LEVEL  <%= @level.index %></span>
    <% elsif @level.index == 2 %>
      <span class="p-1  blue-level"> LEVEL  <%= @level.index %></span>
    <% elsif @level.index == 3 %>
      <span class="p-1  red-level"> LEVEL  <%= @level.index %></span>
    <% elsif @level.index == 4 %>
      <span class="p-1  purple-level"> LEVEL  <%= @level.index %></span>
    <% end %>
  </div>
</div>

    <div class="d-flex mx-5" data-controller="game" >

        <div class="d-flex flex-column col-8 ">
          <div data-game-target="div">
            <div id="level" class="canvas canvas-border" data-project="<%= { name: @project.name, level: @level.index, project_funds: @project.funds, level_funds: @level.funds, level_employees: @level.employees, metrics: @level.metrics, project_employees: @project.employees }.to_json %>">
            </div>
          </div>


          <div class="form-container bg-light mx-auto mt-1 d-none ">
            <%= simple_form_for [:game, @project, @level], url: project_level_game_project_path(@project, @level), method: :patch, html: { id: 'game-form' } do |f| %>
              <%= f.input :funds,
                          label: "Funds",
                          html: {id: "funds"} %>
              <%= f.input :employees,
                          label: "Employees",
                          required: true,
                          html: {id: "employees"} %>
            </div>
          <div class="form-actions  p-3 d-flex justify-content-center align-items-center d-none">
            <%= f.submit "Analyse de la partie", class: "big-button-neon-green ml-auto", html: {id: "submit"}%>
          </div>
            <% end %>
        </div>

        <div class="d-flex align-self-center col-4 d-none " data-game-target="script">
          <%= render partial: "game_story", locals: {project: @project}%>
        </div>

    </div>
