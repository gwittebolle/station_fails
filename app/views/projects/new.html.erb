<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="rounded p-3 shadow">
        <h2>Crée ton projet !</h2>

        <%= simple_form_for [@project] do |f| %>
          <%= f.input :name, label: "Nom du projet" %>
          <%= f.input :sector, label: "Secteur du projet" %>
          <%= f.input :description %>
          <%= f.input :employees_range, label: "Nombre d'employés" %>
          <%= f.input :localisation, label: "Localisation" %>
          <%= f.input :funds, label: "Capital" %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Valider", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
