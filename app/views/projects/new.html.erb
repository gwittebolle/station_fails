<div class="container-title col-12 flex-column form-new">
<div class= "col-8 mt-3 form-border d-flex flex-column align-items-center">
  <div class="actu-level mt-2 d-flex text-center">
    <h1>NOUVELLE PARTIE</h1>
  </div>

  <div class="col-8 m-5 form-new-bg mx-auto offset-lg-3">
    <div class="rounded p-3 shadow form-new">
      <%= simple_form_for [@project] do |f|  %>
        <%= f.input :name, label: "Quelle est le nom de ton idée brillante?", input_html: {class: "form-new-text"} %>
        <%= f.input :sector, label: "Quel secteur?", input_html: {class: "form-new-text"} %>
        <%= f.input :description, label: "Décris en une ligne le projet", input_html: {class: "form-new-text"} %>
        <%= f.input :localisation, label: "Où ça?", input_html: {class: "form-new-text"} %>
        <%= f.submit "Créer la partie", class: "form-area button-neon-green" %>
      <% end %>
    </div>
  </div>

</div>
</div>
