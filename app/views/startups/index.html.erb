<div class="banner cim-ban" style="background-color: $black">
  <h1 class="text-center p-4">LE CIMETIERE</h1>
</div>

<div class="all">
    <div class="search-light d-flex justify-content-center">
     <div class="">
      <%= form_with url: startups_path, method: :get, class: "search-bar" do %>
      <%= text_field_tag :query,
              params[:query],
              class: "search-input",
              placeholder: "Creuser ..."
          %>
      <%= submit_tag "Search", name: "", class: "btn-special " %>
      <% end %>
      </div>





    </div>
  <div class="container">
    <div class="row ">
      <% @startups.each do |startup| %>
      <div class="col-lg-4 d-flex justify-content-center">
        <div class="project-wrapper-lg">
          <%= render partial: "startup_card", locals: {startup: startup} %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
