<div class="">
  <div class="container">
    <div class="d-flex ">
      <div class=" col-4 ">
        <div class="p-5  mt-5 d-flex flex-column align-item-center">
          <%= render partial: "startup_card", locals: {startup: @startup} %>

        </div>
      </div>
      <div class="col-8 d-flex justify-content-around p-5 mt-5">

        <div class="card spi-card mb-5" style="width: 40rem;">
          <div class="card-body ">
            <div class="tiltle-box ">
              <h1 class="card-line-title  text-center"> <b><%= @startup.name %></b></h1>
            </div>
            <div class="fail-reason text-center">
              <h2 class="fail-reason-text "> <i class="fa-solid fa-skull"></i> <%= @startup.fail_reason %> <i
                  class="fa-solid fa-skull"></i></h2>
            </div>


            <p class="card-line "> <% if @startup.description.present? %>
              <p class="card-line  text-center"> <span class="text-gray"><em> - <%= @startup.description %> - </em>
                </span></p>
              <% else %>
              <p></p>
              <% end %>
            </p>


            <div class="title-box ">
              <hr class="thin-line mb-3">
            </div>



            <div class="d--flex">
              <p class="card-line"> <span class="text-gray title-font"> <b> INFORMATIONS </b> </span> </p>
              <ul>
                <li class="card-line"> <% if @startup.localisation.present? %>
                <li class="card-line"> <%= @startup.localisation.capitalize %>, France</li>
                <% else %>
                <li class="card-line"> Paris, France</li>
                <% end %>
                </li>
                <li class="card-line"><% if @startup.sector.present? %>
                <li class="card-line"> <span class="text-gray"> Activité :</span> <%= @startup.sector.capitalize %></li>
                <% else %>
                <li class="card-line"> <span class="text-gray"> Activité :</span> Multimédia </li>
                <% end %>
                </li>

                <li class="card-line "><% if @startup.founder.present? %>
                <li class="card-line"> <span class="text-gray"> Fondateur(s) - </span> <%= @startup.founder %></li>
                <% else %>
                <li class="card-line"> <span class="text-gray"> Fondateur(s) </span> : Non renseigné </li>
                <% end %>



                <li class="card-line "><% if @startup.employees.present? %>
                <li class="card-line"> <span class="text-gray"> Fourchette d'employés : </span>
                  <%= @startup.employees %></li>
                <% else %>
                <li class="card-line"> <span class="text-gray"> Fourchette d'employés : </span> Non renseigné </li>
                <% end %>
                <li class="card-line">
                  <% if @startup.funds >  0 %>
                <li class="card-line"> <span class="text-gray"> Funds : </span><%= @startup.funds %> <span
                    class="text-gray"> € </span> </li>
                <% else %>
                <p></p>
                <% end %>
                </li>
                <li class="card-line "> <span class="text-gray text-center"></span> <%= @startup.birth_year %> -
                  <%= @startup.death_year %></li>
              </ul>
            </div>


            <div class="d-flex jutify-content-between btn-space">
              <div>
                <%= link_to "<- Cimetière", startups_path, class:" exit " %>
              </div>
              <div class="exit">
                <% if current_user.projects.present? %>
                <%= simple_form_for [@startup, @favorite] do |f| %>
                <%= f.submit "Sauvegarder ->", class:"exit" %>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
