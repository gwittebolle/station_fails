<div class="startup-card">
  <%= link_to startup_path(startup) do %>
    <div class="text-center">
      <p><b><%= startup.name %></b></p>
      <p><%= startup.birth_year %> - <%= startup.death_year %></p>
      <p><%= startup.sector %></p>
      <p><%= startup.fail_reason %></p>
      <h3>R.I.P.</h3>
      <i class="fa-solid fa-cross fa-lg"></i>
    </div>
  <% end  %>
</div>
