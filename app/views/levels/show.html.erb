

<div class="all-game">
  <div class="container mt-5">
    <div class="d-flex  ">
      <div class="grave-card col-4 align-self-center" >
        <div class="card-gray p-5  mt-2">
            <%= render partial: "level_card", locals: {level: @level} %>
        </div>
      </div>
      <div class="infos-card col-8 align-self-center p-5 mx-5 mt-2">
          <div class="d-flex justify-content-center">
          <div class="game-card" style="width: 40rem;">
            <div class="card-body">

             <h4 class="title-level">Niveau <%= @level.index %> </h4>
              <h3 class="title-level"><%= @level.name %> </h3>
             <div class="level-text">
               <p ><%= @level.description.html_safe %></p>
             </div>
               <div class="d-flex justify-content-center">
                <%= link_to "Play", edit_project_level_game_project_path(@project, @level), class: "btn-green-banner"  %>

               </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
